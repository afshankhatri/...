<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student's Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('/frontendCode/photos/signup.jpg') no-repeat center center fixed;
            background-size: cover;
            padding: 30px;
        }
        form {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 800px;
            margin: auto;
        }

        h3 {
            color: #2c6b4f;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 10px;
            font-size: 16px;
        }

        .form-control:focus {
            border-color: #2c6b4f;
            box-shadow: 0 0 0 0.2rem rgba(44, 107, 79, 0.25);
        }

        .btn-primary {
            background-color: #2c6b4f;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

        .btn-primary:hover {
            background-color: #244d3a;
        }

        .btn-primary:active {
            transform: scale(0.98);
        }
        /* Styling for the image preview */
        #previewImage {
            display: none; /* Hidden by default until image is uploaded */
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-top: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Styling for the remove (cross) button */
        #removeImageButton {
            position: absolute;
            top: 5px;
            right: 5px;
            background-color: #ff4d4d;
            color: white;
            border: none;
            border-radius: 50%;
            font-size: 18px;
            width: 30px;
            height: 30px;
            cursor: pointer;
            display: none; /* Hidden by default */
        }

        #removeImageButton:hover {
            background-color: #e60000;
        }

    </style>
</head>
<body>

    <form id="registrationForm" action="/user/register" method="post" enctype="multipart/form-data">
        <!-- Personal Information Step -->
        <div id="personalInfo" class="step">
            <h3>Student's Personal Information</h3>
            <div class="row">
            <div class="mb-3 col-md-6">
                    <label for="fullName" class="form-label">Enter your Full name</label>
                    <input id="fullName" name="name" placeholder="Enter Your Full Name" type="text" class="form-control">
            </div>
                <div class="mb-3 col-md-6">
                    <label for="userName" class="form-label">Create your user name</label>
                    <input type="text" class="form-control" id="userName" name="userName" placeholder="enter a unique user name">
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="email" class="form-label">Enter your email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="name@gmail.com">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="collegedomain" class="form-label">Enter your college domain id</label>
                    <input type="text" class="form-control" id="collegedomain" name="collegedomain" placeholder="asdfg.224587.<branch>@mhssce.ac.in">
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="cgpa" class="form-label">CGPA</label>
                    <input type="number" min="0" max="10" id="cgpa" name="cgpa" class="form-control" placeholder="Enter your CGPA">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="department" class="form-label">Department:</label>
                    <select id="department" name="Department" class="form-control">
                        <option value="">--Please choose an option--</option>
                        <option value="aiml">CSE(Artificial Intelligence and Machine Learning)</option>
                        <option value="it">Information Technology</option>
                        <option value="comp">Computer Engineering</option>
                        <option value="iot">CSE(IOT Block Chain)</option>
                        <option value="mech">Mechanical Engineering</option>
                        <option value="civil">Civil Engineering</option>
                        <option value="extc">Electronics and Telecommunication Engineering</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="addmissionYear" class="form-label">Addmission Year</label>
                    <input type="number" id="addmissionYear" name="ProgStartYear" class="form-control" placeholder="Enter the year in which you took the addmission in the college">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="graduationYear" class="form-label">Expected Graduation Year</label>
                    <input type="number" id="graduationYear" name="GraduationYear" class="form-control" placeholder="Enter expected graduation year ">
                </div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="contact" class="form-label">Contact</label>
                    <input type="tel" id="contact" name="contactNum" class="form-control" placeholder="Enter your phone number">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input type="date" id="dob" name="DOB" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                    <label for="linkedIn" class="form-label">Enter your linkedIn URL</label>
                    <input id="linkedIn" name="linkedin" placeholder="Enter Your linkedIn URL" type="text" class="form-control">
            </div>   
            <div class="mb-3">
                <label for="description" class="form-label">Enter description</label>
                <textarea id="description" name="description" class="form-control" rows="4" placeholder="Tell us something about yourself in detail"></textarea>
            </div>         
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="DispPic" class="form-label">Profile Picture</label>
                    <input id="DispPic" name="DispPic" type="file" class="form-control"  onchange="previewProfilePicture(event)">

                </div>
                <div class="mb-3 col-md-6">
                    <label for="password" class="form-label">Create Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Create your own password">
                </div>
            </div>
            <div id="imagePreviewContainer" style="position: relative; display: inline-block;">
                <img id="previewImage" alt="Profile Picture Preview">
                <button id="removeImageButton" type="button" onclick="removeProfilePicture()" style="display: none;">&times;</button>
            </div>
            <div class="mb-3">
                <button type="button" class="btn btn-primary" onclick="showNextStep()">Next</button>
            </div>
        </div>

        <!-- Educational Information Step -->
        <div id="educationalInfo" class="step" style="display: none;">
            <h3>Student's Educational Information</h3>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="ssc" class="form-label">Upload your class 10th marksheet:</label>
                    <input type="file" id="ssc" name="class10" class="form-control" >
                </div>
                <div class="mb-3 col-md-6">
                    <label for="hsc" class="form-label">Upload your 12th/TY diploma marksheet:</label>
                    <input type="file" id="hsc" name="class12" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="resume" class="form-label">Upload your resume</label>
                    <input type="file" class="form-control" id="resume" name="resume">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="lor" class="form-label">Upload your LOR</label>
                    <input type="file" class="form-control" id="lor" name="lor">
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="internship" class="form-label">Upload your internship certificates</label>
                    <input type="file" class="form-control" id="internship" name="internship">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="certification" class="form-label">Upload your certification</label>
                    <input type="file" class="form-control" id="certification" name="certifications">
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="research" class="form-label">Upload your research paper</label>
                    <input type="file" class="form-control" id="research" name="researchPaper">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="gate" class="form-label">Upload your gate marksheet</label>
                    <input type="file" class="form-control" id="gate" name="gateScore">
                </div>
            </div>
            <div class="mb-3">
                <label for="extra" class="form-label">Enter your extra curricular activities</label>
                <textarea id="extra" name="extraCurriculars" class="form-control" rows="4" placeholder="Enter your extra curricular activities here"></textarea>
            </div>
            <button type="button" class="btn btn-primary" onclick="showPreviousStep()">Previous</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

    <script>
        function showNextStep() {
            document.getElementById('personalInfo').style.display = 'none';
            document.getElementById('educationalInfo').style.display = 'block';
        }

        function showPreviousStep() {
            document.getElementById('personalInfo').style.display = 'block';
            document.getElementById('educationalInfo').style.display = 'none';
        }

// Function to preview the uploaded profile picture
function previewProfilePicture(event) {
    const preview = document.getElementById('previewImage');
    const removeButton = document.getElementById('removeImageButton');
    const file = event.target.files[0];

    if (file) {
        const reader = new FileReader();
        reader.onload = function() {
            preview.src = reader.result;
            preview.style.display = 'block';  // Ensure the image is shown
            removeButton.style.display = 'block'; // Show the remove button
        };
        reader.readAsDataURL(file); // Convert the file to a data URL
    } else {
        preview.src = '';  // Reset if no file is selected
        preview.style.display = 'none'; // Hide preview if no file
        removeButton.style.display = 'none'; // Hide the remove button
    }
}

// Function to remove the profile picture preview
function removeProfilePicture() {
    const preview = document.getElementById('previewImage');
    const removeButton = document.getElementById('removeImageButton');
    const fileInput = document.getElementById('DispPic');

    preview.src = '';  // Clear the image preview
    preview.style.display = 'none';  // Hide the image element
    removeButton.style.display = 'none';  // Hide the remove button
    fileInput.value = '';  // Clear the file input
}

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQ93V9ST0zBvW8kK+Uybx3Tc9rT/10QwF3nIV/4ML9qgQEZFYeD2h4IOuT/kJ1r5L" crossorigin="anonymous"></script>
</body>
</html>









